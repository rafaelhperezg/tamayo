<div class="card-indicator text-center">
  <p class="card-title card-item">
    <i class="fa fa-money"></i>
    <strong>
      Est. Net Result Today
    </strong>
  </p>
  <p class="card-value card-item">
    <strong>
      <%= @net_result_today %>
    </strong>
  </p>
</div>
<div class="card-indicator text-center">
    <p class="card-title card-item">
      <i class="fa fa-money"></i>
      <strong>
        Est. Treasury (at the end of the day)
      </strong>
    </p>
    <p class="card-value card-item">
      <strong>
        <%= @enterprise.current_cash %>
      </strong>
    </p>
</div>
